.message__box{data: {message: {id: message.id}}}
  .message__info
    .message__info__user__name
      = message.user.name
    .message__info__data
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .message__text
    - if message.content.present?
      %p.message__text__content
        = message.content
    = image_tag message.image.url, class: 'Message__image' if message.image.present?